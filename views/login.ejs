<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('partials/all_pages/header') -%>
	<title><%= title %></title>
</head>
<body>
	<%- include('partials/all_pages/navbar', {
		loginStatus : loginStatus
	}) -%>
	<div class="container, center">
	<h3>Login to your face</h3>
	<form action="/login/attempt" method="post">
	<%- include('partials/login/login_form', {
		title : title,
		loginStatus : loginStatus,
		errors : errors,
		verify : verify
	}) -%>
	<a href="/reset_password">Forgot password?</a><br>
	<input type="submit" name="login" id="login" value="Login">
</form>
</div>
</body>
</html>